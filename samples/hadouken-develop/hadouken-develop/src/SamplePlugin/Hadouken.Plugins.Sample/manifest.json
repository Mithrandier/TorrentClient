{
  "manifest_version": 2,

  "id": "sample",
  "version": "1.0",

  "ui": {
    "background": [
	  "js/background.js"
	],

	"pages": {
	  "about": {
		"html": "about.html"
	  },

	  "settings": {
		"scripts": [
		  "js/settings.js"
		],
		"html": "settings.html"
	  }
	}
  },

  "dependencies":[
  ],

  "permissions": {
	"network": {
	  "protocols": [ "tcp" ],
	  "endpoints": [ "<all>" ]
	},
	"filesystem": {
	  "paths": [ "<all>" ]
	}
  }
}